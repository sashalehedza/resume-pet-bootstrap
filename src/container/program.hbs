<div>
  {{#with program}}
  <main>
    <section>
      {{#with excursion}}
      <h2>{{name}}</h2>
      {{#with location}}
      <p>Location: {{city}}, {{country}}</p>
      {{/with}}
      <p>Date: {{date}}</p>

      {{#each program}}
      <h3>{{name}}</h3>
      <p>Type: {{type}}</p>
      <p>Duration: {{duration}} hours</p>

      {{#with details}}
      {{#if museum}}
      <h4>Museum Details:</h4>
      <p>Name: {{museum.name}}</p>
      <p>Location: {{museum.location.address}}, {{museum.location.city}},
        {{museum.location.country}}
      </p>

      {{#if museum.exhibits}}
      <h5>Exhibits:</h5>
      <ul>
        {{#each museum.exhibits}}
        <li>
          <strong>{{name}}</strong>
          {{#if artist}}
          <p>Artist: {{artist}}</p>
          {{else}}
          <p>Artist: Unknown</p>
          {{/if}}
          <p>Description: {{description}}</p>
          <p>Audio Guide: {{audio_guide}}</p>
        </li>
        {{/each}}
      </ul>
      {{/if}}
      {{/if}}
      {{/with}}
      {{#if details.performers}}
      <h4>Performers:</h4>
      <ul>
        {{#each details.performers}}
        <li>
          <strong>{{name}}</strong>
          <p>Type: {{type}}</p>
        </li>
        {{/each}}
      </ul>
      {{/if}}

      <h4>Guide:</h4>
      <p>Name: {{details.guide.name}}</p>
      <p>Language: {{details.guide.language}}</p>
      <p>Rating: {{details.guide.rating}}</p>

      {{/each}}
      {{/with}}
    </section>
  </main>
  {{/with}}
</div>